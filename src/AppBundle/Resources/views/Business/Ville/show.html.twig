{% extends 'AppBundle:default:base.html.twig' %}

{% block body %}
    <h1>Ville</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ville.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ ville.libelle }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ ville.pays }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ ville.details }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('business_ville_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('business_ville_edit', { 'id': ville.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
