{% extends 'AppBundle:default:base.html.twig' %}

{% block body %}
    <h1>Achats list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Dateachat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for achat in achats %}
            <tr>
                <td><a href="{{ path('business_achat_show', { 'id': achat.id }) }}">{{ achat.id }}</a></td>
                <td>{% if achat.dateAchat %}{{ achat.dateAchat|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('business_achat_show', { 'id': achat.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('business_achat_edit', { 'id': achat.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('business_achat_new') }}">Create a new achat</a>
        </li>
    </ul>
{% endblock %}
