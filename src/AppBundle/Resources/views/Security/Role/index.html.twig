{% extends 'AppBundle:default:base.html.twig' %}

{% block body %}
    <h1>Roles list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Details</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td><a href="{{ path('security_role_show', { 'id': role.id }) }}">{{ role.id }}</a></td>
                <td>{{ role.libelle }}</td>
                <td>{{ role.details }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('security_role_show', { 'id': role.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('security_role_edit', { 'id': role.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('security_role_new') }}">Create a new role</a>
        </li>
    </ul>
{% endblock %}
