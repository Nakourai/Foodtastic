{% extends 'AppBundle:default:base.html.twig' %}

{% block body %}
    <h1>Role</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ role.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ role.libelle }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ role.details }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('security_role_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('security_role_edit', { 'id': role.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
